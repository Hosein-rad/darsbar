generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id Int @id @default(autoincrement())
  name String
  age Int
  national_id String @unique
  phone_number String
  school String
  grade Int
  branch String?
  city String @default("Yasuj")
  createdAt DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Teacher {
  id Int @id @default(autoincrement())
  name String
  age Int
  national_id String @unique
  personal_id String @unique
  phone_number String
  city String @default("Yasuj")
  createdAt DateTime @default(now())
  updatedAt    DateTime @updatedAt
}